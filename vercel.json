{
    "builds": [
      { "src": "retro/package.json", "use": "@vercel/static-build" },
      { "src": "modern/package.json", "use": "@vercel/static-build" }
    ],
    "rewrites": [
      { "source": "/modern", "destination": "/modern/dist/index.html" },
      { "source": "/modern/(.*)", "destination": "/modern/dist/$1" },
      { "source": "/retro", "destination": "/retro/dist/index.html" },
      { "source": "/retro/(.*)", "destination": "/retro/dist/$1" },
      { "source": "/(.*)", "destination": "/retro/dist/$1" }
    ]
  }